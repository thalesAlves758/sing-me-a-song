{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard", "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint", "prettier"
    ],
    "rules": {
        "no-magic-numbers": "off",
        "no-console": "off",
        "import/extensions": "off",
        "radix": "off",
        "quotes": ["error", "double", { "avoidEscape": true }]
    }
}
